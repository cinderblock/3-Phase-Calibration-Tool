{
  "name": "electron-react-ts-starter",
  "description": "This is a boilerplate starter for an electron project that uses react with typescript and has some fixes applied for common bugs.",
  "version": "0.1.0",
  "private": true,
  "author": "Cameron Tacklind <cameron@tacklind.com>",
  "homepage": "./",
  "build": {
    "appId": "com.tomsawyerlabs.3phase.calibration",
    "productName": "3 Phase Calibration Tool",
    "copyright": "Copyright Â© 2020 Cameron Tacklind",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "portable",
      "icon": "assets/app.ico"
    }
  },
  "dependencies": {
    "@craco/craco": "^5.6.3",
    "aphrodite": "^2.4.0",
    "electron-is-dev": "^1.1.0",
    "rc-slider": "^8.7.1",
    "react": "^16.12.0",
    "react-animations": "^1.0.0",
    "react-device-detect": "^1.11.14",
    "react-dom": "^16.12.0",
    "react-hot-loader": "^4.12.18",
    "react-scripts": "3.3.0",
    "react-smoothie": "^0.11.0",
    "react-timeago": "^4.4.0",
    "shallowequal": "^1.1.0",
    "socket.io-client": "^2.3.0"
  },
  "scripts": {
    "react-start": "craco start",
    "react-build": "craco build",
    "react-test": "craco test --env=jsdom",
    "react-prebuild": "cross-env cp ../main/dist/*.js public/",
    "electron-build": "electron-builder",
    "release": "npm run react-prebuild && npm run react-build && electron-builder --publish=always",
    "build": "npm run react-prebuild && npm run react-build && npm run electron-build",
    "start": "cross-env BROWSER=none npm run react-start"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/jest": "24.9.0",
    "@types/node": "13.1.7",
    "@types/rc-slider": "^8.6.5",
    "@types/react": "^16.9.16",
    "@types/react-dom": "^16.9.4",
    "@types/react-timeago": "^4.1.1",
    "@types/socket.io-client": "^1.4.32",
    "chalk": "^3.0.0",
    "concurrently": "^5.0.2",
    "cross-env": "^6.0.3",
    "electron": "^7.1.9",
    "electron-builder": "^22.2.0",
    "electron-reload": "^1.4.0",
    "wait-on": "^3.2.0",
    "watch": "^1.0.2"
  }
}
