{
  "editor.formatOnSave": true,

  "[javascript]": {
    "editor.formatOnSave": false
  },
  "[javascriptreact]": {
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.formatOnSave": false
  },
  "[typescriptreact]": {
    "editor.formatOnSave": false
  },
  "eslint.autoFixOnSave": true,

  "eslint.validate": [
    "javascript",
    "javascriptreact",
    {
      "language": "typescript",
      "autoFix": true
    },
    {
      "language": "typescriptreact",
      "autoFix": true
    }
  ],

  "eslint.packageManager": "yarn",

  "files.exclude": {
    "**/node_modules": true,
    "**/yarn.lock": true
  },

  "typescript.tsdk": "node_modules/typescript/lib",

  "cSpell.words": [
    "Interop",
    "camelcase",
    "cinderblock",
    "favicons",
    "journalctl",
    "noemit",
    "promisify",
    "qrcode",
    "raspberrypi",
    "shallowequal",
    "systemctl",
    "tacklind",
    "timeago",
    "webui"
  ]
}
