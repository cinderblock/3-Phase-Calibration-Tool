{
  "editor.formatOnSave": true,

  "[javascript]": {
    "editor.formatOnSave": false
  },
  "[javascriptreact]": {
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.formatOnSave": false
  },
  "[typescriptreact]": {
    "editor.formatOnSave": false
  },

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },

  "eslint.packageManager": "yarn",

  "files.exclude": {
    "**/node_modules": true,
    "**/yarn.lock": true
  },

  "typescript.tsdk": "node_modules/typescript/lib",

  "cSpell.words": [
    "Interop",
    "camelcase",
    "cinderblock",
    "favicons",
    "journalctl",
    "noemit",
    "promisify",
    "qrcode",
    "raspberrypi",
    "shallowequal",
    "systemctl",
    "tacklind",
    "timeago",
    "webui"
  ]
}
