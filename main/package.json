{
  "name": "electron-react-ts-starter",
  "version": "1.0.0",
  "main": "./dist/electron.js",
  "scripts": {
    "start": "concurrently \"tsc --watch\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=dev nodemon --watch dist --exec \\\"electron dist/electron.js\\\"\""
  },
  "dependencies": {
    "electron": "^7.1.8"
  },
  "devDependencies": {
    "concurrently": "^5.0.2",
    "cross-env": "^6.0.3",
    "electron-is-dev": "^1.1.0",
    "nodemon": "^2.0.2",
    "typescript": "^3.5.2",
    "wait-on": "^3.2.0"
  }
}
