{
  "name": "electron-react-ts-starter",
  "description": "This is a boilerplate starter for an electron project that uses react with typescript and has some fixes applied for common bugs.",
  "version": "0.1.0",
  "private": true,
  "author": "Cameron Tacklind <cameron@tacklind.com>",
  "homepage": "./",
  "build": {
    "appId": "com.tomsawyerlabs.3phase.calibration",
    "productName": "3 Phase Calibration Tool",
    "copyright": "Copyright Â© 2020 Cameron Tacklind",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "portable",
      "icon": "assets/app.ico"
    }
  },
  "dependencies": {
    "electron-is-dev": "^1.1.0",
    "react": "^16.12.0",
    "react-animations": "^1.0.0",
    "react-device-detect": "^1.11.14",
    "react-dom": "^16.12.0",
    "react-hot-loader": "^4.12.18",
    "react-scripts": "3.0.1",
    "react-timeago": "^4.4.0",
    "shallowequal": "^1.1.0",
    "socket.io-client": "^2.3.0"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "react-prebuild": "cross-env cp ../main/src/*.js public/",
    "electron-build": "electron-builder",
    "release": "npm run react-prebuild && npm run react-build && electron-builder --publish=always",
    "build": "npm run react-prebuild && npm run react-build && npm run electron-build",
    "start": "cross-env BROWSER=none npm run react-start"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/jest": "24.0.15",
    "@types/node": "12.0.10",
    "@types/react": "^16.9.16",
    "@types/react-dom": "^16.9.4",
    "@types/socket.io-client": "^1.4.32",
    "chalk": "^3.0.0",
    "electron": "^5.0.6",
    "electron-reload": "^1.4.0",
    "electron-builder": "^20.44.4",
    "wait-on": "^3.2.0",
    "concurrently": "^4.1.1",
    "cross-env": "^5.2.0",
    "watch": "^1.0.2"
  }
}
