{
  "name": "3-phase-calibration-tool",
  "version": "0.0.0",
  "description": "Calibration tool for 3-Phase-Controller",
  "repository": "https://github.com/cinderblock/3-Phase-Calibration-Tool",
  "author": "Cameron Tacklind <cameron@tacklind.com>",
  "license": "MIT",
  "scripts": {
    "install": "yarn main install && yarn ui install && yarn remote install && npx install-vscode-extensions",
    "check-files": "yarn install --ignore-scripts --check-files && yarn main install --check-files && yarn ui install --check-files && yarn remote install --check-files && npx install-vscode-extensions",
    "synchronize-workspace": "yarn install --ignore-scripts --non-interactive --no-progress && yarn main install --non-interactive --no-progress && yarn remote install --non-interactive --no-progress && yarn ui install --non-interactive --no-progress && npx install-vscode-extensions",
    "upgrade-all": "yarn upgrade --latest && yarn main upgrade --latest && yarn remote upgrade --latest && yarn ui upgrade --latest",
    "lint": "eslint . --ext .ts,.tsx",
    "ui": "yarn --cwd renderer",
    "main": "yarn --cwd main",
    "remote": "yarn --cwd remote/deploy",
    "start": "ts-node ./src/runtimes/Calibrate",
    "debug": "ts-node ./src/runtimes/Debug",
    "mlx": "ts-node ./src/runtimes/MLXcontrol",
    "prog": "ts-node ./src/runtimes/Program",
    "process": "ts-node ./src/runtimes/Reprocess",
    "raw-import": "ts-node ./src/runtimes/MakeDataBlock",
    "test-many": "ts-node ./src/runtimes/TestMany",
    "fieldtest": "ts-node ./src/runtimes/FieldTest",
    "test": "ts-node ./src/runtimes/Test"
  },
  "engines": {
    "npm": "yarn is required"
  },
  "dependencies": {
    "@types/chart.js": "^2.9.19",
    "@types/crc": "^3.4.0",
    "@types/node": "^13.11.1",
    "@types/usb": "^1.5.1",
    "@types/uuid": "^7.0.2",
    "canvas": "2.6.1",
    "chalk": "^4.0.0",
    "chart.js": "2.9.3",
    "crc": "^3.8.0",
    "koa": "^2.11.0",
    "nrf-intel-hex": "^1.3.0",
    "smooth-control": "https://github.com/cinderblock/smooth-control.git#manual-transfers",
    "uuid": "^7.0.3",
    "yarn": "^1.22.4"
  },
  "devDependencies": {
    "@types/koa": "^2.11.3",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "husky": "^4.2.5",
    "install-vscode-extensions": "^1.0.0",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.4",
    "ts-node": "^8.8.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.3"
  },
  "optionalDependencies": {
    "chartjs-node": "^1.7.1"
  }
}
